<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.LatestPaymentFragment">
    <RelativeLayout
        android:id="@+id/edtDeleveryType"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:elevation="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/bg_buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/edtDeleveryImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:padding="5dp"
            android:src="@drawable/carbon_report" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinnerType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="3dp"
            android:layout_toEndOf="@id/edtDeleveryImage"
            android:src="@drawable/arrow_drop_down"
            android:popupBackground="@color/white" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tvTapBelow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Tap below items to see the details"
        android:textSize="12sp"
        android:textColor="@color/text_black"
        android:fontFamily="@font/dmsans_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtDeleveryType"/>
    <LinearLayout
        android:id="@+id/lvDataDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="15dp"
        android:paddingBottom="10dp"
        android:elevation="2dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTapBelow">

        <LinearLayout
            android:id="@+id/lvDate"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:weightSum="3"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Date Range"
                android:background="@drawable/bg_reddate"
                android:fontFamily="@font/dmsans_medium"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="13sp"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_buttons"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Amount(Rs.)"
                android:fontFamily="@font/dmsans_medium"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:background="@drawable/bg_amount"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_buttons"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="View"
                android:layout_weight="1"
                android:fontFamily="@font/dmsans_medium"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:background="@drawable/bg_view"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/lvDate">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="10sp"
                    android:fontFamily="@font/dmsans_medium"
                    android:text="11-20/May/2023"
                    android:textColor="@color/text_black"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="10sp"
                    android:fontFamily="@font/dmsans_medium"
                    android:text="11-20/May/2023"
                    android:textColor="@color/text_black"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="10sp"
                    android:fontFamily="@font/dmsans_medium"
                    android:text="11-20/May/2023"
                    android:textColor="@color/text_black"
                    android:layout_marginTop="20dp"/>

            </LinearLayout>
<!--            <View-->
<!--                android:layout_width="0.5dp"-->
<!--                android:layout_height="match_parent"-->
<!--                android:background="@color/red"-->
<!--                />-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="10sp"
                    android:fontFamily="@font/dmsans_medium"
                    android:text="11-20/May/2023"
                    android:textColor="@color/text_black"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="10sp"
                    android:fontFamily="@font/dmsans_medium"
                    android:text="11-20/May/2023"
                    android:textColor="@color/text_black"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="10sp"
                    android:fontFamily="@font/dmsans_medium"
                    android:text="11-20/May/2023"
                    android:textColor="@color/text_black"
                    android:layout_marginTop="20dp"/>

            </LinearLayout>
<!--            <View-->
<!--                android:layout_width="0.5dp"-->
<!--                android:layout_height="match_parent"-->
<!--                android:background="@color/red"-->
<!--                />-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/ivNextOne"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/mingcute_down_line"/>
                <ImageView
                    android:id="@+id/ivNextTwo"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/mingcute_down_line"/>
                <ImageView
                    android:id="@+id/ivNextThree"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/mingcute_down_line"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/bg_dashboard_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="35dp"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="45dp"
            android:padding="7dp"
            android:src="@drawable/bi_exclamation"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:fontFamily="@font/dmsans_medium"
            android:gravity="center"
            android:text="Selector unKnown returned the root state wise"
            android:textColor="@color/white"
            android:textSize="11sp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="45dp"
            android:padding="9dp"
            android:src="@drawable/entypo_cross"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>





</androidx.constraintlayout.widget.ConstraintLayout>